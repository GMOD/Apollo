<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:cellview='urn:import:com.google.gwt.user.cellview.client'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .container {
            margin-left: 20px;
            margin-top: 10px;
        }

        .dataGrid td {
            word-wrap: break-word;
        }

        .prefixBox {
            display: inline;
            margin: 5px;
            width: 50px;
        }

        .widgetBox {
            display: inline;
            margin: 5px;
            width: 80px;
            /*width: 100%;*/
        }

        .propertyStyle {
            border: 2px;
            border-style: solid;
            border-color: grey;
            padding: 0;
        }

        .addButton {
            margin-top: 5px;
        }

        .commentBox {
            border-top: #0e0e0e solid 2px;
        }</ui:style>

    <gwt:DockLayoutPanel>
        <gwt:center size="250">
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.dataGrid}"/>
        </gwt:center>
        <gwt:east size="250">
            <b:Container fluid="true" addStyleNames="{style.propertyStyle}">
                <b:Row>
                    <b:Column size="MD_3">
                        <b:TextBox placeholder="Tag" ui:field="tagInputBox" styleName="{style.prefixBox}"/>
                    </b:Column>
                    <b:Column size="MD_5">
                        <b:TextBox placeholder="Value" ui:field="valueInputBox" styleName="{style.widgetBox}"/>
                    </b:Column>
                    <b:Column size="MD_2">
                        <b:Button ui:field="addAttributeButton" icon="PLUS_CIRCLE" enabled="false"
                                  addStyleNames="{style.addButton}" pull="RIGHT"/>
                    </b:Column>
                </b:Row>
                <b:Row addStyleNames="{style.commentBox}">
                    <b:Column size="MD_5">
                        <b:ListBox ui:field="cannedTagSelectorBox" styleName="{style.widgetBox}" />
                    </b:Column>
                    <b:Column size="MD_5">
                        <b:ListBox ui:field="cannedValueSelectorBox" styleName="{style.widgetBox}" />
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:east>
        <gwt:south size="30">
            <b:Button text="Delete" ui:field="deleteAttributeButton" icon="MINUS_CIRCLE" enabled="false" type="WARNING"/>
        </gwt:south>
    </gwt:DockLayoutPanel>
</ui:UiBinder>