<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:apollo='urn:import:org.bbop.apollo.gwt.client'
        >
    <ui:style>
        .details-header-title {
            /*background-color: #808080;*/
            font-size: larger;
            width: 20%;
            /*margin-top: 5px;*/
            margin-left: 10px;
            text-align: left;
            font-weight: 200;
            /*width: 100%;*/
            /*border: solid;*/
            display: inline-table;
        }

        /** Set ids using widget.getElement().setId("idOfElement") */
        #closeButton {
            margin: 15px 6px 6px;
        }

        .details-header {
            background-color: #cccccc;
            width: 100%;
            border-top: 0;
            /*display: inline-block;*/
        }

        .details-button {
            /*width: 10px;*/
            display: inline-table;
            cursor: pointer;
            /*border-top: 0;*/
        }
    </ui:style>
    <gwt:SplitLayoutPanel ui:field="mainSplitPanel">
        <gwt:center>
            <gwt:Frame ui:field="frame" width="100%" height="100%"/>
        </gwt:center>
        <gwt:east size="500">
            <gwt:DockLayoutPanel ui:field="eastDockPanel">
                <gwt:north size="30">
                    <gwt:FlowPanel styleName="{style.details-header}">
                        <b:Button icon="CARET_RIGHT" ui:field="dockOpenClose" styleName="{style.details-button}"/>
                        <gwt:HTML text="Details" styleName="{style.details-header-title}"/>
                    </gwt:FlowPanel>
                </gwt:north>
                <gwt:center>
                    <gwt:TabLayoutPanel barHeight="30" ui:field="detailTabs">
                        <gwt:tab>
                            <gwt:header>Tracks</gwt:header>
                            <apollo:Track ui:field="trackPanel"/>
                        </gwt:tab>

                        <gwt:tab>
                            <gwt:header>Annotations</gwt:header>
                            <apollo:AnnotatorPanel ui:field="annotatorPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Sequence</gwt:header>
                            <apollo:SequencePanel ui:field="sequencePanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Organism</gwt:header>
                            <apollo:OrganismBrowserPanel ui:field="organismPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Users</gwt:header>
                            <apollo:UserBrowserPanel ui:field="userPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>User Groups</gwt:header>
                            <apollo:UserGroupBrowserPanel ui:field="userGroupPanel"/>
                        </gwt:tab>

                    </gwt:TabLayoutPanel>
                </gwt:center>
            </gwt:DockLayoutPanel>
        </gwt:east>

    </gwt:SplitLayoutPanel>
</ui:UiBinder>