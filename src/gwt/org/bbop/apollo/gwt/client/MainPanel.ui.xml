<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:apollo='urn:import:org.bbop.apollo.gwt.client'
        >
    <ui:style>
        .details-header-title {
            /*background-color: #808080;*/
            font-size: larger;
            width: 20%;
            /*margin-top: 5px;*/
            margin-left: 10px;
            text-align: left;
            font-weight: 200;
            /*width: 100%;*/
            /*border: solid;*/
            display: inline-table;
        }

        /** Set ids using widget.getElement().setId("idOfElement") */
        #closeButton {
            margin: 15px 6px 6px;
        }

        .details-header {
            background-color: #cccccc;
            width: 100%;
            border-top: 0;
            /*display: inline-block;*/
        }

        .details-button {
            /*width: 10px;*/
            display: inline-table;
            cursor: pointer;
            /*border-top: 0;*/
        }

        .details-list-title {
            display: inline-table;
            margin-left: 10px;
            margin-right: 5px;
            font-size: smaller;
        }

        .details-list {
            font-size: smaller;
        }

        .title-tab-headers {
            font-size: smaller;
        }

        .active-piece {
            display: inline;
            padding-left: 10px;
            color: #ffffff;
        }

        .emptyPanel {
            background-color: #cccccc;
            border: solid;
            border-color: darkgray;
            border-width: 1px;
        }

        .inline {
            display: inline-table;
        }
    </ui:style>
    <gwt:SplitLayoutPanel ui:field="mainSplitPanel">
        <gwt:center>
            <!--<gwt:Frame ui:field="frame" width="100%" height="100%" visible="false"/>-->
            <gwt:NamedFrame ui:field="frame" width="100%" height="100%" visible="true" name="genomeViewer"/>
        </gwt:center>
        <gwt:east size="550">
            <gwt:DockLayoutPanel ui:field="eastDockPanel">
                <gwt:north size="25">
                    <gwt:FlowPanel styleName="{style.details-header}">
                        <b:Button icon="CARET_RIGHT" ui:field="dockOpenClose" styleName="{style.details-button}"/>
                        <gwt:HTML text="Active" styleName="{style.active-piece}" />
                        <gwt:HTML text="Organism" styleName="{style.details-list-title}"/>
                        <gwt:ListBox ui:field="organismList" styleName="{style.details-list}"/>
                        <gwt:HTML text="Ref Sequence" styleName="{style.details-list-title}"/>
                        <!--<gwt:ListBox ui:field="sequenceList" styleName="{style.details-list}"/>-->
                        <gwt:SuggestBox ui:field="sequenceList" styleName="{style.details-list}"/>
                        <!--<gwt:HTML styleName="{style.inline}">-->
                        <!--<div style="display:inline-table;">-->
                        <!--Drrr . .-->
                        <!--<script>-->
                        <!--alert('bob') ;-->
                        <!--</script>-->
                        <!--</div>-->
                        <!--</gwt:HTML>-->

                    </gwt:FlowPanel>
                </gwt:north>
                <gwt:west size="20">
                    <gwt:FlowPanel ui:field="westPanel" styleName="{style.emptyPanel}">
                    </gwt:FlowPanel>
                </gwt:west>
                <gwt:center>
                    <gwt:TabLayoutPanel barHeight="30" ui:field="detailTabs" addStyleNames="{style.title-tab-headers}">

                        <gwt:tab>
                            <gwt:header>Annotations</gwt:header>
                            <apollo:AnnotatorPanel ui:field="annotatorPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Tracks</gwt:header>
                            <apollo:TrackPanel ui:field="trackPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Ref Sequence</gwt:header>
                            <apollo:SequencePanel ui:field="sequencePanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Organism</gwt:header>
                            <apollo:OrganismPanel ui:field="organismPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Users</gwt:header>
                            <apollo:UserPanel ui:field="userPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>User Groups</gwt:header>
                            <apollo:UserGroupPanel ui:field="userGroupPanel"/>
                        </gwt:tab>
                        <gwt:tab>
                            <gwt:header>Preferences</gwt:header>
                            <apollo:PreferencePanel ui:field="preferencePanel"/>
                        </gwt:tab>
                    </gwt:TabLayoutPanel>
                </gwt:center>
            </gwt:DockLayoutPanel>
        </gwt:east>

    </gwt:SplitLayoutPanel>
</ui:UiBinder>