<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:bhtml="urn:import:org.gwtbootstrap3.client.ui.html"

>


    <ui:style>
        .northPanel {
            padding: 0px;
            margin: 10px;
        }

        .spacer {
            padding: 0px;
            margin: 10px;
        }
        .link{
            margin-left: 5px;
            margin-right: 5px;
            cursor: pointer;
            font-weight: bolder;
            text-decoration: underline;
        }
    </ui:style>


    <b:Form type="HORIZONTAL">
        <b:FieldSet>
            <b:Container fluid="true" styleName="{style.northPanel}">
                <b:Row>
                    <b:Column size="MD_3">
                        <b:FormLabel for="username">Username:</b:FormLabel>
                    </b:Column>
                    <b:Column size="MD_9">
                        <b:TextBox ui:field="userBox" b:id="formName"/>
                    </b:Column>
                </b:Row>

                <b:Row marginTop="5">
                    <b:Column size="MD_3">
                        <b:FormLabel for="formPassword">Password:</b:FormLabel>
                    </b:Column>
                    <b:Column size="MD_9">
                        <b:Input type="PASSWORD" ui:field="passBox" b:id="formPassword"/>
                    </b:Column>
                </b:Row>

                <b:Row styleName="{style.spacer}">
                    <b:Column size="MD_8">
                        <b:CheckBox ui:field="rememberBox" text="Remember me"/>
                    </b:Column>
                    <b:Column size="MD_2">
                        <b:Button ui:field="loginButton" type="PRIMARY">Login</b:Button>
                    </b:Column>
                </b:Row>
            </b:Container>


            <b:Row styleName="{style.spacer}">
                <b:Column size="MD_11">
                    <bhtml:Hr/>
                    <b:Anchor text="Browse public genomes" href="../jbrowse/"/>
                    <bhtml:Hr/>
                    <b:Alert type="INFO">
                        <bhtml:Text text="This is an instance of the Apollo genome annotation editor, configured for the SARS-CoV-2 reference genome."/>
                        <bhtml:Text text="The demonstration user is:"/>
                        <bhtml:Br/>
                        <bhtml:Strong text="demouser / demo1234"/>
                        <bhtml:Br/>
                        <bhtml:Text text=" If you would like your own demonstration user in a sandbox you can"/>
                        <gwt:Anchor styleName="{style.link}" target="_blank" href="mailto:apollo-dev@lbl.gov?subject=Please add a user to http://covid19apollo.jbrowse.org/">email the dev team</gwt:Anchor>
                        <bhtml:Text text=" or "/>
                        <gwt:Anchor styleName="{style.link}" target="_blank" href="https://hub.docker.com/repository/docker/gmod/sars-cov-2-apollo">run your own docker instance locally.</gwt:Anchor>
                        <bhtml:Br/>
                    </b:Alert>
                    <bhtml:Hr/>
                </b:Column>
            </b:Row>


            <b:Row styleName="{style.spacer}">
                <b:Anchor text="About Apollo" href="../about/" target="_blank"/>
            </b:Row>

            <b:Row styleName="{style.spacer}">
                <b:Column size="MD_1">
                    <b:html.Div ui:field="errorHtml"/>
                </b:Column>
                <b:Column size="MD_9">
                    <b:html.Paragraph ui:field="errorText"/>
                </b:Column>
            </b:Row>
        </b:FieldSet>
    </b:Form>

</ui:UiBinder>
