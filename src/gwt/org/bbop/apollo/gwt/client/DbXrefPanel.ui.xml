<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:cellview='urn:import:com.google.gwt.user.cellview.client'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .container {
            margin-left: 20px;
            margin-top: 10px;
        }

        .dataGrid td {
            word-wrap: break-word;
        }

        .prefixBox {
            display: inline;
            margin: 5px;
            width: 50px;
        }

        .widgetBox {
            display: inline;
            margin: 5px;
            /*width: 100%;*/
        }

        .propertyStyle {
            border: 2px;
            border-style: solid;
            border-color: grey;
        }

        .addButton {
            margin-top: 5px;
        }</ui:style>

    <gwt:DockLayoutPanel>
        <gwt:center size="250">
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.dataGrid}"/>
        </gwt:center>
        <gwt:east size="250">
            <b:Container fluid="true" addStyleNames="{style.propertyStyle}">
                <b:Row>
                    <b:Column size="MD_3">
                        <b:TextBox placeholder="Prefix" ui:field="tagInputBox" styleName="{style.prefixBox}"/>
                    </b:Column>
                    <b:Column size="MD_6">
                        <b:TextBox placeholder="Accession" ui:field="valueInputBox" styleName="{style.widgetBox}"/>
                    </b:Column>
                    <b:Column size="MD_2">
                        <b:Button text="Add" ui:field="addDbXrefButton" icon="PLUS_CIRCLE" addStyleNames="{style.addButton}"/>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_6">
                        <b:Button text="Delete" ui:field="deleteDbXrefButton" icon="MINUS_CIRCLE"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:east>
    </gwt:DockLayoutPanel>
</ui:UiBinder>