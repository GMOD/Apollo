<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
>
    <ui:style>

        .container {
            margin-left: 20px;
            margin-top: 10px;
        }

        .widgetPanel {
            display: inline-table;
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .row {
            margin-left: 5px;
            margin-right: 5px;
            margin-top: 5px;
        }

        .goButtons {
            margin-top: 5px;
        }
    </ui:style>

    <gwt:DockLayoutPanel>
        <gwt:center>
            <cellview:DataGrid ui:field="dataGrid"/>
        </gwt:center>
        <gwt:south size="30">
            <b:Container width="100%" height="100%">
                <b:Modal ui:field="editGoModal" closable="true" fade="true" dataBackdrop="STATIC">
                    <b:ModalHeader>
                        <gwt:HTML>
                            <b>Add GO Annotation</b>
                        </gwt:HTML>
                    </b:ModalHeader>
                    <b:ModalBody>
                        <b:Container fluid="true" width="100%">
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_10">
                                    <b:Label>Go Term</b:Label>
                                    <b:SuggestBox ui:field="goTermField"/>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_10">
                                    <b:Label>Gene Production Relationship</b:Label>
                                    <b:SuggestBox ui:field="geneProductRelationshipField"/>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_4">
                                    <b:Label>Evidence Code</b:Label>
                                    <b:SuggestBox ui:field="evidenceCodeField"/>
                                </b:Column>
                                <b:Column size="MD_2">
                                    <b:CheckBox text="Not" width="100%" ui:field="notQualifierCheckBox"/>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_8"
                                >
                                    <b:Label>With</b:Label>
                                    <b:TextBox ui:field="withField"/>
                                </b:Column>
                                <b:Column size="MD_2">
                                    <b:Button ui:field="addWithButton">Add</b:Button>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <gwt:FlexTable ui:field="withEntriesFlexTable" width="100%" visible="true"/>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_8">
                                    <b:Label>Reference</b:Label>
                                    <b:TextBox ui:field="referenceField"/>
                                </b:Column>
                                <b:Column size="MD_2">
                                    <b:Button ui:field="addRefButton">Add</b:Button>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_10">
                                    <gwt:FlexTable ui:field="referencesFlexTable" width="100%" visible="true"/>
                                </b:Column>
                            </b:Row>
                            <b:Row addStyleNames="{style.row}">
                                <b:Column size="MD_6">
                                    <b:Button ui:field="saveNewGoAnnotation" type="PRIMARY">Save</b:Button>
                                    <b:Button  ui:field="cancelNewGoAnnotation">Cancel</b:Button>
                                </b:Column>
                            </b:Row>
                        </b:Container>
                    </b:ModalBody>
                    <!--                    </b:Container>-->
                </b:Modal>
                <b:Row>
                    <b:Column size="MD_1">
                        <b:Button text="New" ui:field="newGoButton"/>
                    </b:Column>
                    <b:Column size="MD_1">
                        <b:Button text="Edit" ui:field="editGoButton" enabled="false"/>
                    </b:Column>
                    <b:Column size="MD_1">
                        <b:Button text="Delete" ui:field="deleteGoButton" enabled="false"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:south>

    </gwt:DockLayoutPanel>
</ui:UiBinder>