<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
             xmlns:assemblage="urn:import:org.bbop.apollo.gwt.client.assemblage"
>
    <ui:style>
        .northPanel {
            padding: 0px;
            margin-left: 10px;
        }

        .cellTable {
            border-bottom: 1px solid #ccc;
            text-align: left;
            margin-bottom: 4px;
            outline: none;
        }

        .rowNorth {
            /*padding-bottom: 10px;*/
            padding-top: 10px;
            margin-bottom: 30px;
        }

        /*Bookmark draggable panel*/

        /*Most CSS in in annotator.css*/
        /*This is here so it init on bind, but otherwise can move  */

        .dragdrop-flow-panel-positioner {
            /*color: blue;*/
            /*color: #396494;*/
            padding-top: 2px;
            color: black;
            font-weight: 200;
        }

        .inline-button {
            margin-right: 0 !important;
        }

    </ui:style>
    <gwt:DockLayoutPanel ui:field="layoutPanel">
        <gwt:north size="50">
            <b:Container fluid="true" styleName="{style.northPanel}">
                <b:Row styleName="{style.rowNorth}">
                    <b:Column size="MD_5">
                        <b:TextBox ui:field="searchBox" enabled="true"
                                   placeholder="Search for Bookmarks"/>
                    </b:Column>
                    <b:Column size="MD_7">
                        <b:ButtonGroup dataToggle="BUTTONS" addStyleNames="{style.inline-button}">
                            <b:RadioButton name="AssemblageFilter" text="Scaffold" type="DEFAULT"
                                           ui:field="showOnlyScaffoldButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="Combined" type="WARNING" icon="COMPRESS"
                                           ui:field="showOnlyCombinedButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="Feature" type="INFO" icon="SCISSORS"
                                           ui:field="showOnlyFeatureButton" addStyleNames="{style.inline-button}"/>
                            <b:RadioButton name="AssemblageFilter" text="All" type="DEFAULT" icon="BAN"
                                           ui:field="showAllAssemblagesButton" addStyleNames="{style.inline-button}"/>
                        </b:ButtonGroup>
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:north>
        <gwt:center>
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.cellTable}"/>
        </gwt:center>
        <gwt:south size="300">
            <gwt:DockLayoutPanel>
                <gwt:north size="35">
                    <b:Container>
                        <b:Row>
                            <b:Column size="MD_5">
                                <b:ButtonGroup>
                                    <b:Button text="Combine" icon="LOCATION_ARROW" enabled="false"
                                              ui:field="combineButton"/>
                                    <b:Button text="Delete" icon="REMOVE" enabled="false" ui:field="removeButton"/>
                                    <b:Button text="Save" icon="SAVE" enabled="false" ui:field="saveButton"/>
                                    <b:Button text="View" icon="EYE" enabled="false" ui:field="viewButton"/>
                                </b:ButtonGroup>
                                <b:ButtonGroup>
                                    <b:Button icon="EXCHANGE" enabled="false" ui:field="flipAssemblageButton" type="DEFAULT"/>
                                </b:ButtonGroup>
                            </b:Column>
                        </b:Row>
                    </b:Container>
                </gwt:north>
                <gwt:center>
                    <assemblage:AssemblageDetailPanel ui:field="assemblageDetailPanel"/>
                </gwt:center>
            </gwt:DockLayoutPanel>
        </gwt:south>

    </gwt:DockLayoutPanel>
</ui:UiBinder>