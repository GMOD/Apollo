<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >
    <ui:style>

        .container {
            margin-left: 20px;
            margin-right: 20px;
            margin-top: 10px;
        }

        .widgetPanel {
            margin-bottom: 5px;
        }

        .row {
            margin-left: 5px;
            margin-right: 5px;
        }
        .bolder {
            font-size: larger;
            font-weight: bolder;
        }
    </ui:style>

    <b:Container fluid="true" styleName="{style.container}">
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup >
                    <b:InputGroupAddon>Type</b:InputGroupAddon>
                    <b:TextBox ui:field="typeField" enabled="false" addStyleNames="{style.bolder}"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup >
                    <b:InputGroupAddon>Name</b:InputGroupAddon>
                    <b:TextBox autoComplete="false" ui:field="nameField" />
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Synonyms</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="synonymsField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Description</b:InputGroupAddon>
                    <b:TextBox autoComplete="false" ui:field="descriptionField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Location</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="locationField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Ref Sequence</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="sequenceField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Owner</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="userField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Created</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="dateCreatedField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row styleName="{style.row}">
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Updated</b:InputGroupAddon>
                    <b:TextBox enabled="false" ui:field="lastUpdatedField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>