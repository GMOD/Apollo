	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers-extra/features/gradle-sdkman:2": {
			"version": "2.11",
			"jdkVersion": "8",
			"jdkDistro": "tem"
		},
